@model IEnumerable<ComicBookDataObjects.Comic>

@{
    ViewBag.Title = "Index";
}

<h2>Comics Currently Available</h2>

<p>
    @if (HttpContext.Current.User.IsInRole("Employee"))
    {
        @Html.ActionLink("Add New", "Create")
    }
</p>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th width="150">
                @Html.DisplayNameFor(model => model.Authors)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Issue)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Publisher)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th width="250">
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ComicType)
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tbody>
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Authors)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Issue)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Publisher)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ComicType)
                </td>
                <td>
                    @if (HttpContext.Current.User.IsInRole("Customer"))
                    {
                        @Html.ActionLink("Add to Pull", "AddToPull", new { id = item.ComicID })
                    }
                    @if (HttpContext.Current.User.IsInRole("Employee"))
                    {
                        @Html.ActionLink("Edit", "Edit", new { id = item.ComicID })
                    } |
                    @Html.ActionLink("Details", "Details", new { id = item.ComicID })
                </td>
            </tr>
        </tbody>
    }

</table>
